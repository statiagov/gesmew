<div class="panel panel-default" id="order_details" data-hook>
  <div class="panel-heading">
    <h3 class="panel-title"><%= Gesmew.t(:confirm) %></h3>
  </div>
  <div class="panel-body">
    <%= render :partial => 'gesmew/shared/order_details', :locals => { :order => @order } %>
  </div>
</div>

<div class="well text-right form-buttons" data-hook="buttons">
  <%= submit_tag Gesmew.t(:place_order), :class => 'btn btn-lg btn-success' %>
  <script>Gesmew.disableSaveOnClick();</script>
</div>
