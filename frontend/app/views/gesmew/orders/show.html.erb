<% content_for :google_analytics do %>
  <% if order_just_completed?(@order) %>
    <%= render partial: 'gesmew/shared/google_purchase.js', locals: { order: @order } %>
  <% end %>
<% end %>

<fieldset id="order_summary" data-hook>
  <legend><%= Gesmew.t(:order_number, number: @order.number) %></legend>
  <h1><%= accurate_title %></h1>
  <% if order_just_completed?(@order) %>
    <strong><%= Gesmew.t(:thank_you_for_your_order) %></strong>
  <% end %>

  <div id="order" data-hook>
    <%= render partial: 'gesmew/shared/order_details', locals: { order: @order } %>

    <br class="clear" />

    <p data-hook="links">
      <%= link_to Gesmew.t(:back_to_store), gesmew.root_path, class: "button" %>
      <% unless order_just_completed?(@order) %>
        <% if try_gesmew_current_user && respond_to?(:gesmew_account_path) %>
          <%= link_to Gesmew.t(:my_account), gesmew_account_path, class: "button" %>
        <% end %>
      <% end %>
    </p>
  </div>
</fieldset>
