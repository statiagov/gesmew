<%= render partial: 'gesmew/admin/shared/error_messages', locals: { target: @product } %>

<% content_for :page_title do %>
  <%= Gesmew.t(:new_image) %>
<% end %>

<%= form_for [:admin, @product, @image], html: { multipart: true } do |f| %>
  <fieldset data-hook="new_image">
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-actions" data-hook="buttons">
      <%= button Gesmew.t('actions.update'), 'save' %>
      <span class="or"><%= Gesmew.t(:or) %></span>
      <%= button_link_to Gesmew.t('actions.cancel'), gesmew.admin_product_images_url(@product), icon: 'delete', id: 'cancel_link' %>
    </div>
  </fieldset>
<% end %>
