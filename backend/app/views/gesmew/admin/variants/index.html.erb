<%= render partial: 'gesmew/admin/shared/product_tabs', locals: {current: :variants} %>

<%# Place for new variant form %>
<div id="new_variant" data-hook></div>

<% if @variants.any? %>
  <table class="table sortable" data-sortable-link="<%= update_positions_admin_product_variants_path(@product) %>">
    <thead data-hook="variants_header">
      <tr>
        <th colspan="2"><%= Gesmew.t(:options) %></th>
        <th><%= Gesmew.t(:price) %></th>
        <th><%= Gesmew.t(:sku) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
    <% @variants.each do |variant| %>
      <tr id="<%= gesmew_dom_id variant %>" <%= 'style="color:red;"' if variant.deleted? %> data-hook="variants_row">
        <td class="move-handle">
          <% if can? :edit, variant %>
            <span class="icon icon-move handle"></span>
          <% end %>
        </td>
        <td><%= variant.options_text %></td>
        <td><%= variant.display_price.to_html %></td>
        <td><%= variant.sku %></td>
        <td class="actions actions-2 text-right">
          <%= link_to_edit(variant, no_text: true) if can?(:edit, variant) && !variant.deleted? %>
          <%= link_to_delete(variant, no_text: true) if can?(:destroy, variant) && !variant.deleted? %>
        </td>
      </tr>
      <% end %>
      <% unless @product.has_variants? %>
        <tr>
          <td colspan="5"><%= Gesmew.t(:none) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found alert alert-info">
    <%= Gesmew.t(:no_resource_found, resource: plural_resource_name(Gesmew::Variant)) %>,
    <%= link_to(Gesmew.t(:add_one), gesmew.new_admin_product_variant_path(@product)) if can? :create, Gesmew::Variant %>!
  </div>
<% end %>

<% if @product.empty_option_values? %>
  <% if can?(:create, Gesmew::OptionType) && can?(:create, Gesmew::OptionValue) %>
    <p class='first_add_option_types no-objects-found' data-hook="first_add_option_types">
      <%= Gesmew.t(:to_add_variants_you_must_first_define) %>
      <%= link_to(Gesmew.t(:option_types), gesmew.admin_product_url(@product)) %>
      <%= Gesmew.t(:and) %>
      <%= link_to Gesmew.t(:option_values), gesmew.admin_option_types_url %>
    </p>
  <% end %>
<% else %>
  <% content_for :page_actions do %>
    <%= button_link_to(Gesmew.t(:new_variant), gesmew.new_admin_product_variant_url(@product), { remote: :true, icon: 'add', :'data-update' => 'new_variant', class: 'btn-success', id: 'new_var_link' }) if can? :create, Gesmew::Variant %>
    <%= button_link_to (@deleted.blank? ? Gesmew.t(:show_deleted) : Gesmew.t(:show_active)), gesmew.admin_product_variants_url(@product, deleted: @deleted.blank? ? "on" : "off"), { class: 'btn-default', icon: 'filter' } %>
  <% end %>
<% end %>
