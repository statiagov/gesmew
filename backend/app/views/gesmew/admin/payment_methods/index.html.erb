<% content_for :page_title do %>
  <%= plural_resource_name(Gesmew::PaymentMethod) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Gesmew.t(:new_payment_method), new_object_url, :class => "btn-success", :icon => 'add', :id => 'admin_new_payment_methods_link' %>
<% end if can? :create, Gesmew::PaymentMethod %>

<% if @payment_methods.any? %>
  <table class="table sortable" id='listing_payment_methods' data-hook data-sortable-link="<%= update_positions_admin_payment_methods_url %>">
    <thead>
      <tr data-hook="admin_payment_methods_index_headers">
        <th></th>
        <th><%= Gesmew.t(:name) %></th>
        <th><%= Gesmew.t(:provider) %></th>
        <th class="text-center"><%= Gesmew.t(:display) %></th>
        <th class="text-center"><%= Gesmew.t(:active) %></th>
        <th data-hook="admin_payment_methods_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @payment_methods.each do |method|%>
        <tr id="<%= gesmew_dom_id method %>" data-hook="admin_payment_methods_index_rows">
          <td class="move-handle text-center">
            <% if can?(:edit, method) %>
              <span class="icon icon-move handle"></span>
            <% end %>
          </td>
          <td><%= method.name %></td>
          <td><%= method.type %></td>
          <td class="text-center"><%= method.display_on.blank? ? Gesmew.t(:both) : Gesmew.t(method.display_on) %></td>
          <td class="text-center"><%= method.active ? Gesmew.t(:say_yes) : Gesmew.t(:say_no) %></td>
          <td data-hook="admin_payment_methods_index_row_actions" class="actions actions-2 text-right">
            <%= link_to_edit(method, :no_text => true) if can? :edit, method %>
            <%= link_to_delete(method, :no_text => true) if can? :delete, method %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info no-objects-found">
    <%= Gesmew.t(:no_resource_found, resource: plural_resource_name(Gesmew::PaymentMethod)) %>,
    <%= link_to(Gesmew.t(:add_one), new_object_url) if can? :create, Gesmew::PaymentMethod %>!
  </div>
<% end %>
