<% content_for :page_title do %>
  <%= Gesmew.t(:new_payment_method) %>
<% end %>

<%= render :partial => 'gesmew/admin/shared/error_messages', :locals => { :target => @payment_method } %>

<%= form_for @payment_method, :url => collection_url do |f| %>
  <fieldset>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <div data-hook="buttons" class="actions">
      <%= button Gesmew.t(:create), 'save' %>
    </div>
  </fieldset>
<% end %>
