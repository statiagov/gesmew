<div class="panel-heading">
  <h1 class="panel-title">
    <%= Gesmew.t(:rules) %>
  </h1>
</div>
<div id="rule_fields" class="panel-body">

  <%= form_tag gesmew.admin_promotion_promotion_rules_path(@promotion), :remote => true, :id => 'new_product_rule_form' do %>

    <div class="form-group">
      <%= label_tag :promotion_rule_type, Gesmew.t(:add_rule_of_type) %>
      <%= select_tag('promotion_rule[type]', options_for_promotion_rule_types(@promotion), :class => 'select2') %>
    </div>
    <div class="form-actions">
      <%= button Gesmew.t(:add), 'plus', 'submit', class: "btn-success" %>
    </div>

  <% end %>

  <%= form_for @promotion, :url => object_url, :method => :put do |f| %>
    <div id="promotion-policy-select">
      <% Gesmew::Promotion::MATCH_POLICIES.each do |policy| %>
        <div class="radio">
          <%= f.label "match_policy_#{policy}" do %>
            <%= f.radio_button :match_policy, policy %>
            <%= Gesmew.t "promotion_form.match_policies.#{policy}" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div id="rules" class="filter_list margint">
      <% if @promotion.rules.any? %>
        <%= render :partial => 'promotion_rule', :collection => @promotion.rules, :locals => {} %>
      <% else %>
        <div class="alert alert-warning">
          <%= Gesmew.t(:no_rules_added) %>
        </div>
      <% end %>
    </div>

    <div class="promotion-update actions">
      <%= button Gesmew.t('actions.update'), 'ok' %>
    </div>
  <% end %>
</div>
