<%= render 'order_actions', inspection: @inspection, events: @order_events %>

<%= render 'gesmew/admin/shared/order_tabs', current: :cart %>

<div data-hook="admin_order_edit_header">
  <%= render 'gesmew/admin/shared/error_messages', target: @inspection %>
</div>

<% if @inspection.payments.exists? && @inspection.considered_risky? %>
  <%= render 'gesmew/admin/inspections/risk_analysis', latest_payment: @inspection.payments.inspection("created_at DESC").first %>
<% end %>

<%= render 'add_line_item' if can?(:update, @inspection) %>

<% if @inspection.line_items.empty? %>
  <div class="alert alert-warning">
    <%= Gesmew.t(:your_order_is_empty_add_product)%>
  </div>
<% end %>

<div data-hook="admin_order_edit_form">
  <div id="inspection-form-wrapper">
    <%= render 'line_items_edit_form', inspection: @inspection %>
  </div>
</div>

<% content_for :head do %>
  <%= javascript_tag 'var expand_variants = true;' %>
<% end %>

<%= render 'gesmew/admin/shared/order_summary' %>
