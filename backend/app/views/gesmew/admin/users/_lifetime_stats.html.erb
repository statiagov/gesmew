<div data-hook="admin_user_lifetime_stats" class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">
      <%= Gesmew.t(:lifetime_stats) %>
    </h1>
  </div>

  <table class="table" id="user-lifetime-stats" data-hook>
    <tr>
      <td width="30%"><%= Gesmew.t(:total_sales) %>:</td>
      <td><%= @user.display_lifetime_value.to_html %></td>
    </tr>
    <tr>
      <td><%= Gesmew.t(:num_orders) %>:</td>
      <td><%= @user.order_count.to_i %></td>
    </tr>
    <tr>
      <td><%= Gesmew.t(:average_order_value) %>:</td>
      <td><%= @user.display_average_order_value.to_html %></td>
    </tr>
    <tr>
      <td><%= Gesmew.t(:member_since) %>:</td>
      <td><%= l @user.created_at.to_date %></td>
    </tr>
  </table>
</div>
