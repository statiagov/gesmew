<div data-hook="admin_establishment_form_fields">

  <div class="row">

    <div class="col-md-8" data-hook="admin_establishment_form_left">
      <div data-hook="admin_establishment_form_name">
        <%= f.field_container :name, class: ['form-group'] do %>
          <%= f.label :name, raw(Gesmew.t(:name) + content_tag(:span, ' *', class: 'required')) %>
          <%= f.text_field :name, class: 'form-control title' %>
          <%= f.error_message_on :name %>
        <% end %>
      </div>

      <div data-hook="admin_establishment_form_type">
        <%= f.field_container :establishment_type, class: ['form-group'] do %>
          <%= f.label :establishment_type, Gesmew.t(:establishment_type) %>
          <%= f.collection_select :establishment_type_id, Gesmew::EstablishmentType.all, :id, :name,{}, :class => 'select2 js-filterable' %>
          <%= f.error_message_on :establishment_type %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="content-header">
    <h3 class="col-sm-12">Primary Contact Information</h3>
  </div>
  <div class="row">
    <div class="col-md-6" data-hook="admin_establishment_form_right">
      <%= f.fields_for :contact_information do |c| %>
        <%= render :partial => 'gesmew/admin/shared/address_form', :locals => { :f => c} %>
      <% end %>
    </div>
  </div>

  </div>
</div>
