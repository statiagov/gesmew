<%= render partial: 'gesmew/admin/shared/order_tabs', locals: { current: :credit_cards } %>

<% content_for :page_title do %>
  / <%= Gesmew.t(:refund) %>
<% end %>

<%= form_tag do %>
  <h3><%= Gesmew.t(:refund) %></h3>
  <fieldset data-hook="credit">
    <p>
      <%= label_tag :amount, Gesmew.t(:amount) %>
      <%= text_field_tag :amount, @payment.amount %>
    </p>
    <p class="form-actions">
      <%= button Gesmew.t(:make_refund) %>
    </p>
  </fieldset>
<% end %>
