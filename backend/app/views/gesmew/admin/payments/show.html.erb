<%= render partial: 'gesmew/admin/shared/order_tabs', locals: { current: :payments } %>

<% content_for :page_title do %>
  /
  <%= I18n.t(:one, scope: "activerecord.models.gesmew/payment") %>
  /
  <%= payment_method_name(@payment) %>
  /
  <span class="state <%= @payment.state %>">
    <%= Gesmew.t(@payment.state, scope: :payment_states, default: @payment.state.capitalize) %>
  </span>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Gesmew.t(:logs), gesmew.admin_order_payment_log_entries_url(@order, @payment), icon: 'file' %>
<% end %>

<%= render partial: "gesmew/admin/payments/source_views/#{@payment.payment_method.method_type}",
           locals: {
             payment: @payment.source.is_a?(Gesmew::Payment) ? @payment.source : @payment
           }
%>

<div class="alert alert-success" data-hook="amount">
  <%= Gesmew.t(:amount) %>: <%= @payment.display_amount.to_html %>
</div>

<%= render 'gesmew/admin/payments/capture_events' %>
