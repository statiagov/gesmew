<% content_for :page_title do %>
  <%= plural_resource_name(Gesmew::EstablishmentType) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Gesmew.t(:new_establishment_type), new_object_url, { :class => "btn-success", :icon => 'add', 'data-update' => 'new_establishment_type', :id => 'new_establishment_type_link'} %>
<% end %>

<% if @establishment_types.any? %>
  <table class="table" id='listing_establishment_types' data-hook>
    <thead>
      <tr data-hook="establishment_types_header">
        <th><%= Gesmew.t(:name) %></th>
        <th><%= Gesmew.t(:description) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @establishment_types.each do |establishment_type| %>
        <tr id="<%= gesmew_dom_id establishment_type %>" data-hook="establishment_types_row">
          <td><%= establishment_type.name %></td>
          <td><%= establishment_type.description %></td>
          <td class="actions actions-2 text-right">
            <%= link_to_edit(establishment_type, :no_text => true, :class => 'admin_edit_establishment_type') %>
            <%= link_to_delete(establishment_type, :no_text => true) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info no-objects-found">
    <%= Gesmew.t(:no_resource_found, resource: plural_resource_name(Gesmew::EstablishmentType)) %>,
    <%= link_to Gesmew.t(:add_one), new_object_url %>!
  </div>
<% end %>
