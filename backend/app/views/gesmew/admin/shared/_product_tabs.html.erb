<% content_for :page_title do %>
  <%= link_to Gesmew.t(:products), admin_products_path %> /
  <%= @product.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_product_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Gesmew.t(:details), edit_admin_product_url(@product) %>
    <% end if can?(:admin, Gesmew::Product) %>
    <%= content_tag :li, class: ('active' if current == :images) do %>
      <%= link_to_with_icon 'picture', Gesmew.t(:images), gesmew.admin_product_images_url(@product) %>
    <% end if can?(:admin, Gesmew::Image) %>
    <%= content_tag :li, class: ('active' if current == :variants) do %>
      <%= link_to_with_icon 'th-large', Gesmew.t(:variants),  gesmew.admin_product_variants_url(@product) %>
    <% end if can?(:admin, Gesmew::Variant) %>
    <%= content_tag :li, class: ('active' if current == :properties) do %>
      <%= link_to_with_icon 'list-alt', Gesmew.t(:properties), gesmew.admin_product_product_properties_url(@product) %>
    <% end if can?(:admin, Gesmew::ProductProperty) %>
    <%= content_tag :li, class: ('active' if current == :stock) do %>
      <%= link_to_with_icon 'home', Gesmew.t(:stock), stock_admin_product_url(@product) %>
    <% end if can?(:stock, Gesmew::Product) %>
  </ul>
<% end %>
