<table class="table table-condensed table-bordered">
  <thead>
    <tr data-hook="taxons_header">
      <th><%= Gesmew.t(:name) %></th>
      <th><%= Gesmew.t(:path) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% taxons.each do |taxon| %>
      <tr id="<%= gesmew_dom_id(taxon) %>" data-hook="taxons_row">
        <td><%= taxon.name %></td>
        <td><%= taxon_path taxon %></td>
        <td class="actions">
          <%= link_to_delete taxon, :url => remove_admin_product_taxon_url(@product, taxon), :name => icon('delete') + ' ' + Gesmew.t(:remove) %>
        </td>
      </tr>
    <% end %>
    <% if taxons.empty? %>
      <tr data-hook="taxons_none"><td colspan="3"><%= Gesmew.t(:none) %>.</td></tr>
    <% end %>
  </tbody>
</table>
